<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ResultInformationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result Information"
            android:gravity="center_horizontal"
            android:textSize="22sp"
            android:textColor="#000000"
            android:background="#fae6e6"
            />



        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="Examination Level :"
                />

            <EditText
                android:id="@+id/examinationLevelEt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textSize="@dimen/result_edit_text_size"
                android:singleLine="true"
                android:inputType="textCapCharacters"
                android:hint="SSC/HSC/Others"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="@dimen/result_text_view_size"
                android:textColor="#000000"
                android:text="University/Board :"
                />

            <EditText
                android:id="@+id/universityBoardEt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textSize="@dimen/result_edit_text_size"
                android:singleLine="true"
                android:inputType="textAutoComplete"
                android:hint="Dhaka/Chittagong/Others"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="@dimen/result_text_view_size"
                android:textColor="#000000"
                android:text="Institute :"
                />

            <EditText
                android:id="@+id/instituteEt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textSize="@dimen/result_edit_text_size"
                android:singleLine="true"
                android:hint="DU/CU/Others"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="@dimen/result_text_view_size"
                android:textColor="#000000"
                android:text="Subject/Group :"
                />

            <EditText
                android:id="@+id/subjectGroupEt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textSize="@dimen/result_edit_text_size"
                android:singleLine="true"
                android:hint="Science/Others"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="@dimen/result_text_view_size"
                android:textColor="#000000"
                android:text="Result :"
                />

            <EditText
                android:id="@+id/resultEt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textSize="@dimen/result_edit_text_size"
                android:singleLine="true"
                android:hint="A+/First Class/Others"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="@dimen/result_text_view_size"
                android:textColor="#000000"
                android:text="Passing Year :"
                />

            <EditText
                android:id="@+id/passingYearEt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textSize="@dimen/result_edit_text_size"
                android:singleLine="true"
                android:inputType="number"
                android:hint="1980/1990/2000/2010"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSave"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Save"
                android:textAllCaps="false"
                android:onClick="btnSave"

                android:background="@drawable/custom_button_a"
                android:layout_gravity="center_horizontal"
                />


            <Button
                android:id="@+id/buttonGoto"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Go to Profile"
                android:textAllCaps="false"
                android:onClick="btnProfileList"
                android:textStyle="bold"
                android:background="@drawable/custom_button_a"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
